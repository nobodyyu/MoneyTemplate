@using WebApplication1.Helper

@model IEnumerable<WebApplication1.Models.MyMoneyViewModel>

@{ 
    var i = 1;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{

                foreach (var item in Model.Select((value, index) => new { index, value }))
                {
                    <tr>
                        <td>@(item.index + 1)</td>
                        <td>@Html.displayCategory(item.value.Categoryyy)</td>
                        <td>@(item.value.Dateee.ToString("yyyy-MM-dd"))</td>
                        <td>@item.value.Amounttt.ToString("#.#")</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
